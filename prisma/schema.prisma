// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./database.sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  eventSet EventSet?
}

model EventSet {
  id            Int  @id @default(autoincrement())
  relatedUser   User @relation(fields: [relatedUserId], references: [id])
  relatedUserId Int
  events Event[]
}

model Event {
  id            Int      @id @default(autoincrement())
  description   String
  beginningDate DateTime
  endingDate    DateTime
  relatedSet EventSet @relation(fields:[relatedSetId], references: [id])
  relatedSetId Int
}